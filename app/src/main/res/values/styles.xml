<resources>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="maxButtonHeight">48dp</item>
        <item name="iconTint">?colorControlNormal</item>
        <item name="selectableItemBackgroundBorderless">
            ?android:selectableItemBackgroundBorderless
        </item>
        <item name="titleTextAppearance">@style/Text.Head</item>
        <item name="subtitleTextAppearance">@style/Text.Body.L.Secondary</item>

        <item name="contentInsetStart">16dp</item>
        <item name="contentInsetEnd">16dp</item>

        <item name="popupTheme">@style/PopupMenu</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="PopupMenu">
        <item name="android:popupBackground">?colorPrimary</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">?colorTextPrimary</item>
        <item name="popupMenuBackground">?colorPrimary</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:height">56dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.12</item>
        <item name="android:background">?colorControlNormal</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog.Style</item>
    </style>

    <style name="BottomSheetDialog.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="cardBackgroundColor">?colorPrimary</item>
    </style>

</resources>
